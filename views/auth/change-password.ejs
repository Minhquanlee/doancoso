<div class="auth-card">
  <h2>Đổi mật khẩu</h2>
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="text-muted" style="color:#b91c1c;margin-bottom:12px"><%= error %></div>
  <% } %>
  <% if (typeof success !== 'undefined' && success) { %>
    <div style="color:green;margin-bottom:12px">Mật khẩu đã được cập nhật.</div>
  <% } %>
  <form method="post" action="/account/password" class="auth-form">
    <label>
      Mật khẩu hiện tại
      <input type="password" name="currentPassword" required />
    </label>
    <label>
      Mật khẩu mới
      <input type="password" name="newPassword" required />
    </label>
    <label>
      Xác nhận mật khẩu mới
      <input type="password" name="confirmPassword" required />
    </label>
    <div class="auth-actions" style="margin-top:12px">
      <button type="submit" class="btn">Cập nhật mật khẩu</button>
      <a href="/" style="margin-left:12px" class="link-btn">Hủy</a>
    </div>
  </form>
</div>
