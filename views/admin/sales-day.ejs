<div class="admin-wrap">
  <aside class="admin-sidebar">
    <a href="/admin">Sản phẩm</a>
    <a href="/admin/new">Tạo sản phẩm mới</a>
    <a href="/admin/orders">Đơn hàng</a>
    <a href="/admin/sales" class="active">Doanh thu</a>
  </aside>
  <div class="admin-main">
    <h2>Chi tiết doanh thu: <%= day %></h2>
    <p>Tổng đơn: <strong><%= totalOrders %></strong> — Tổng doanh thu: <strong style="color:var(--accent)"><%= (totalRevenue||0).toLocaleString() %> VND</strong></p>

    <div class="sales-grid" style="margin-top:12px">
      <div class="sales-left">
        <h4>Sản phẩm bán theo ngày</h4>
        <% if (!products || products.length === 0) { %>
          <div class="card" style="padding:12px">Không có sản phẩm nào bán trong ngày này.</div>
        <% } else { %>
          <div class="day-list">
            <% products.forEach(p=>{ %>
              <div class="day-card">
                <div style="display:flex;gap:12px;align-items:center">
                  <img src="<%= p.safeImage %>" style="width:72px;height:72px;object-fit:cover;border-radius:6px" />
                  <div>
                    <div style="font-weight:700"><%= p.title %></div>
                    <div class="text-muted"><%= p.total_qty %> lượt mua</div>
                  </div>
                </div>
                <div style="text-align:right"><div style="font-weight:700;color:var(--accent)"><%= (p.revenue||0).toLocaleString() %> VND</div></div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>

      <div class="sales-right">
        <h4>Danh sách đơn hàng trong ngày</h4>
        <div style="display:flex;flex-direction:column;gap:8px">
          <% if (!orders || orders.length === 0) { %>
            <div class="card" style="padding:12px">Không có đơn hàng trong ngày này.</div>
          <% } else { %>
            <% orders.forEach(o=>{ %>
              <div class="card" style="display:flex;justify-content:space-between;align-items:center;padding:12px;">
                <div>
                  <div style="font-weight:700">Đơn #<%= o.id %> — <span class="text-muted" style="font-weight:600">Trạng thái: <%= o.status %></span></div>
                  <div class="text-muted">Thời gian: <%= o.created_at %></div>
                </div>
                <div style="text-align:right">
                  <div style="font-weight:700;color:var(--accent)"><%= (o.total||0).toLocaleString() %> VND</div>
                  <div style="margin-top:6px"><a class="link-btn" href="/admin/orders/<%= o.id %>">Xem chi tiết</a></div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>

        <div style="margin-top:12px;display:flex;gap:8px;align-items:center;justify-content:space-between">
          <div>
            <% if (page && page > 1) { %>
              <a class="link-btn" href="/admin/sales/day/<%= day %>?page=<%= page-1 %>&period=<%= period %>">« Trước</a>
            <% } %>
            <% if (page && totalPages && page < totalPages) { %>
              <a class="link-btn" href="/admin/sales/day/<%= day %>?page=<%= page+1 %>&period=<%= period %>">Sau »</a>
            <% } %>
          </div>
          <div>
            <a class="link-btn" href="/admin/sales/day/<%= day %>/export">Export CSV</a>
          </div>
        </div>
      </div>
    </div>

    <div style="margin-top:16px"><a href="/admin/sales?period=<%= period %>" class="link-btn">Quay lại báo cáo</a></div>
  </div>
</div>
